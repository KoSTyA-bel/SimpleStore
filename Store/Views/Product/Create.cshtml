@model ProductViewModel

<form asp-action="Create" asp-antiforgery="true" asp-controller="Product">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Name">Введите название</label><br />
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Description">Введите описание</label><br />
            <input type="text" asp-for="Description" />
        </div>
        <div>
            <label asp-for="Count">Введите количество</label><br />
            <input type="number" asp-for="Count" />
        </div>
        <div>
            <label asp-for="StartOfSales">Введите дату старта продаж</label><br />
            <input asp-for="StartOfSales" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>
